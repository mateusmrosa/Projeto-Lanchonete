@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{

    <script src="~/js/RealizarPedido/Index.js"></script>
}

@section estilos{
    <style>

            .strBd{
            font-weight:bold;
            text-align:justify;
        }

        .btnAdd {
            width: 23px;
            vertical-align: bottom;
        }

        .disabled {
            pointer-events: none;
            opacity: 0.5;
        }

            #ulAutoCompleteProduto li {
                padding: 5px;
                margin-bottom: 0;
                cursor: pointer;
            }
            
                #ulAutoCompleteProduto li:hover {
                    background-color: lightgray;
                }


        .disabled {
            pointer-events: none;
            opacity: 0.5;
        }

        .mdb-autocomplete-wrap {
            -webkit-box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
            box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
            position: absolute;
            z-index: 100;
            left: 0;
            right: 0;
            list-style-type: none;
            overflow-y: auto;
            max-height: 210px;
            padding-left: 0;
            background: #fff;
        }
    </style>
}



<input type="hidden" id="hId" value="0" />
<input type="hidden" id="hIdFunc" value="@Context.Session.GetString("id")" />

<div class="container fadeInDown">
    <div class="row">
        <div class="col-md-12">
            <ul class="formularioContainer form-row mb-4">

                <li class="col">
                    <input value="" id="txtProduto" class="form-control mdb-autocomplete" placeholder="Pesquisar produto" onkeyup="index.pesquisarProduto()" onsearch="index.pesquisarProduto()" />
                    <input type="hidden" id="hIdProduto" />

                    <ul class="mdb-autocomplete-wrap" id="ulAutoCompleteProduto">
                        <!-- busca do ajax-->
                    </ul>
                </li>

                <li class="col">
                    <input value="" required="required" class="form-control mb-4" id="txtQuantidade" placeholder="Quantidade" />
                </li>
                <li class="col">
                    <input value="" required="required" class="form-control mb-4" id="txtValor" placeholder="Valor" />
                </li>
                <li class="col">
                    <img src="~/images/add.png" id="btnAdd" class="btnAdd disabled" onclick="index.adicionar()" />
                </li>
            </ul>

            <label class="label">
                <b>Itens adicionados</b>
            </label>
            <table class="table">
                <thead class="blue white-text strBd">
                    <tr>
                        <th scope="col">Produto</th>
                        <th scope="col">Quantidade</th>
                        <th scope="col">Valor</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbodyItems"></tbody>
            </table>


            <input type="button" class="btn btn-success" value="Gravar" onclick="index.gravar()">
            <input type="button" class="btn btn-danger" value="Novo" onclick="index.novo()">
            <div id="divMsg"></div>
        </div>
    </div>
</div>


