
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{

    <script src="~/js/CadastarProduto/Index.js"></script>
   

        <script src="~/lib/jquery/jquery-3.4.0.min.js"></script>
        <link href="~/lib/fancybox3/jquery.fancybox.min.css" rel="stylesheet" />
        <script src="~/lib/fancybox3/jquery.fancybox.min.js"></script>
    


}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @*<div class="card">
                    <div class="card-body">
                        Cadastrar Funcionário.
                    </div>
                </div>*@
            <div class="wrapper fadeInDown">

                <div id="formContent">

                    <form class="p-4 border border-light">

                        <input type="hidden" id="hId" value="0" />

                        <input id="nome" class="form-control mb-4" placeholder="Produto">

                        <select id="tipoProd" class="mb-4 browser-default custom-select">
                            <option value="0">Tipo de produto...</option>
                            <option value="1">Lanche</option>
                            <option value="2">Pizza</option>
                            <option value="3">Bebida</option>
                        </select>

                        <input type="number" placeholder="Quantidade" id="quantidade" class="mb-4 form-control">

                        <input id="valor" class="mb-4 form-control" placeholder="R$">

                        <button class="btn btn-success" type="button" onclick="index.cadastrar()">Cadastrar</button>
                        <button class="btn btn-danger" type="button" onclick="index.cancelar()">Cancelar</button>
                        <button class="btn btn-info" type="button" onclick="index.abrirPesquisa()">Pesquisar</button>
                    </form>
                    <div style="width:100%;" id="divMsg"></div>
                </div>
            </div>
        </div>
    </div>
</div>

